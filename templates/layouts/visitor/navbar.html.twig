                {{curentPathInfo == path('visitor.contact.create') ? "aria-current='page'"  : ''}} aria-current="page" href="{{path('visitor.contact.create')}}">Contact</a>
            </li>
        </ul>

        <div class="btn-group">
        {% if app.user %}
            {% if "ROLE_ADMIN" in app.user.roles %}
                <a href="{{path('admin.dashboard.index')}}" class="btn btn-outline-primary"> {{app.user.firstName}} {{app.user.lastName}}</a>
            {% else %}
                <a href="{{path('user.home.index')}}" class="btn btn-outline-primary"> {{app.user.firstName}} {{app.user.lastName}}</a>
            {% endif %}
        {% else %}<a href="{{path('visitor.authentication.authenticate')}}" class="btn btn-outline-primary">Identifiez-vous</a>{% endif %}
        <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu text-center">
            {% if app.user %}
            {% if "ROLE_ADMIN" in app.user.roles %}
                <li><a class="dropdown-item" href="{{path('admin.dashboard.index')}}">Espace Admin</a></li>
            {% endif %}
                <li><a class="dropdown-item" href="{{path('user.home.index')}}">Espace Utilisateur</a></li>
                <li><a class="dropdown-item" href="{{path('visitor.authentication.logout')}}">Deconnexion</a></li>
            {% else %}
            <li><a class="dropdown-item" href="{{path('visitor.authentication.authenticate')}}">Connexion</a></li>
            <li><a class="dropdown-item" href="{{path('visitor.registration.register')}}">Inscription</a></li>
            {% endif %}
