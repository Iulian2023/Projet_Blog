{% extends "themes/admin/base_admin.html.twig" %}

{% block jQuery %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block datatables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
 
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
{% endblock %}

{% block main %}

    <div class="container mx-auto mt-3 col-6">
         {% for flash_error in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ flash_error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}  
    </div>

    <div class="container d-flex flex-column">
        <h1 class='text-center my-3'>Liste des Categories</h1>
        <div class="d-flex justify-content-center mb-3">
            <button type="button" class='btn btn-secondary' data-bs-toggle="modal" data-bs-target="#ModalMakeCategory">Créer une categorie</button>

            <!-- Modal Create Category -->
            <div class="modal fade" id='ModalMakeCategory' tabindex="-1" aria-labelledby='ModalMakeCategory' aria-hidden='true'>
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id='ModalMakeCategory'>Créer une categorie</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {{form_start(form)}}
                                <div class="mb-3">
                                    <label for="category_form_name" class="form-label">Nom de categorie</label>
                                    <small class="text-danger">
                                        {{form_errors(form.name)}}
                                    </small>
                                    {{form_widget(form.name, {'attr' : {"class" : "form-control"}})}}
                                </div>
                        </div>
                        <div class="modal-footer d-flex flex-row ">
                            {# <button type="button" class="btn btn-secondary flex-fill" data-bs-dismiss="modal">Annuler</button> #}
                            <input type="submit" value="Créer" formnovalidate class="btn btn-primary text-info flex-fill">
                        </div>
                    {{form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="table" class="table table-striped table-hover">
                <thead class='table-primary'>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Date de création</th>
                        <th scope="col">Date de modification</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr scope='row'>
                        <td>{{category.id}}</td>
                        <td>{{category.name}}</td>
                        <td>{{category.slug}}</td>
                        <td>{{ category.createdAt|format_datetime('long', 'short', locale='fr') }}</td>
                        <td>{{ category.updatedAt|format_datetime('long', 'short', locale='fr') }}</td>
                        <td class='fs-5 '>
                        <a href="{{path("admin.category.edit", {'id' : category.id})}}" onclick="" class='me-3'><i class="bi bi-pencil-square text-secondary fs-3" title='editer'></i></a>

                        <a title='supprimer' onclick="event.preventDefault();return confirm('Attention !! La suppression de cette catégorie est irréversible. ?') && document.querySelector('#form_delete_category_{{category.id}}').submit();" href="" class=''><i class="bi bi-trash text-danger fs-3"></i></a>
                        
                        <form action="{{path('admin.category.delete', {'id': category.id})}}" method="post" id="form_delete_category_{{category.id}}">
                            <input type="hidden" name="csrf_token" value="{{csrf_token('delete_category_'~category.id)}}">
                            <input type="hidden" name="_method", value="DELETE">
                        </form> 
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <a href="{{path('admin.dashboard.index')}}" class='text-primary text-decoration-none'>Retour page principale</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            let table = $('#table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
                },
                order: [[ 5, 'asc' ]],ù
                "columnDef": [
                    {"className": th.dt-center, td.dt-center { text-align: center; }}
                ]
            });
        } );
    </script>
{% endblock %}