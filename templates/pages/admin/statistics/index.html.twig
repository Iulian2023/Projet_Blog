{% extends "themes/admin/base_admin.html.twig" %}

{% block title %}Statistiques de site{% endblock %}
{% block description %}Statistiques de site{% endblock %}

{% block css %}
<style>
html, body{
    height: 100%;
    background-color: #FFF7DF;
}

</style>
{% endblock %}

{% block main %}
    <div class="container mx-auto mt-3 col-lg-6 col">
         {% for flash_error in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ flash_error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}  
    </div>
    <div>
        <h1 class="text-center display-5 my-5 text-primary">Statistiques de site</h1>
        <div class="text-center mb-2">
            <small class='text-success'>Chaque card indque le numéro de contenu crées</small>
        </div>
        <div class="container gap-md-4 gap-3 justify-content-center d-flex flex-wrap">
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.category.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les categories</div>
                </a>                
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{categories|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.post.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les articles</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{posts|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.tag.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les tags</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{tags|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.contact.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les contacts</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{contacts|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.user.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les Utilisateurs</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{users|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.comment.index')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les commentaires</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{comments|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <span class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les likés</div>
                </span>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{postLikes|length}}</p>
                </div>
            </div>
            <div class="card text-bg-light mb-3 shadow" style="width: 18rem;">
                <a href="{{path('admin.country.list')}}" class="text-decoration-none text-info bg-primary fw-bold">
                    <div class="card-header text-center">Les Pays</div>
                </a>
                <div class="card-body ">
                    <p class="card-text text-primary fw-bold text-center">{{countries|length}}</p>
                </div>
            </div>
        </div>
        <div class="text-center">
            <a href="{{path('admin.dashboard.index')}}" class='text-primary'>Retour page principale</a>
        </div>
    </div>
{% endblock %}
