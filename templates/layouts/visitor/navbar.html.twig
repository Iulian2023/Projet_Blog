{% set curentPathInfo = app.request.pathInfo%}

<nav class="navbar navbar-expand-lg bg-white border-bottom mb-0">
    <div class="container">
        <a class="navbar-brand" href="{{path('visitor.welcome.index')}}"><img class='img-fluid logo-navbar-size' src="{{asset('images/logo/logo-removebg-preview.png')}}" alt=""></a>
